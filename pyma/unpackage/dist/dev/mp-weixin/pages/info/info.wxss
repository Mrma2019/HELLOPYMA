 .nav-bar {
  background-color: #f8f8f8 !important;
}
.profile-card {
  width: 95%;
  height: -webkit-max-content;
  height: max-content;
  background-color: #1A4190;
  border-radius: 20rpx;
  color: #fff;
}
.profile-card .avatar-wrapper {
  align-items: center;
  padding: 20rpx;
  position: relative;
  border-bottom: 1px solid #ddd;
}
.profile-card .avatar-wrapper .avatar {
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
  border: 2px solid #fff;
}
.profile-card .avatar-wrapper .nickname {
  flex: 1;
  font-size: 30rpx;
  padding: 0 100rpx 0 40rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.profile-card .avatar-wrapper .menu-btn {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 40rpx;
  background-color: #fff;
  border-radius: 50%;
  color: #1A4190;
  justify-content: center;
  align-items: center;
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
  transition: transform 0.25s ease-out;
  will-change: transform;
}
.profile-card .avatar-wrapper .menu-btn .iconfont {
  font-size: 30rpx;
}
.profile-card .avatar-wrapper .menu-btn__hover {
  transform: scale(1.2);
}
.profile-card .edit {
  width: 100%;
  padding: 20rpx;
  font-size: 30rpx;
  color: #fff;
}
.profile-card .edit .block {
  align-items: center;
  color: #ddd;
  font-weight: bold;
}
.profile-card .edit .block .iconfont {
  font-size: 40rpx;
}
.profile-card .edit .block .block__content {
  padding-left: 20rpx;
}
.profile-card .edit .block .block__content .text {
  font-size: 30rpx;
}
.profile-card .edit .block .block__content .desc {
  font-size: 20rpx;
}
.nav-card {
  width: 95%;
  height: -webkit-max-content;
  height: max-content;
  margin-top: 40rpx;
  align-items: flex-start;
  color: #1A4190;
  border: 1px solid #ddd;
  padding-bottom: 0;
  border-radius: 20rpx;
}
.nav-card .title {
  display: inline-block;
  width: 100%;
  padding: 20rpx;
  background-color: #1A4190;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
}
.nav-card .item-nav__hover {
  background-color: #ddd;
}
.nav-card .item-nav {
  width: 100%;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
  position: relative;
  font-size: 32rpx;
}
.nav-card .item-nav:last-child {
  border-bottom: none;
}
.nav-card .item-nav .text {
  padding-left: 20rpx;
}
.nav-card .item-nav .iconfont:nth-child(3) {
  position: absolute;
  left: 90%;
}
.popup-content {
  padding: 0 40rpx;
  height: 100%;
}
.popup-content .header {
  height: 120rpx;
  justify-content: space-around;
}
.popup-content .header .title {
  font-size: 35rpx;
  font-weight: bold;
}
.popup-content .header .desc {
  font-size: 25rpx;
}
.popup-content .line-item {
  width: 100%;
  height: 120rpx;
  padding: 20rpx 0;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #ddd;
}
.popup-content .item-text {
  margin-right: 40rpx;
  font-size: 30rpx;
}
.popup-content .avatar-wrapper .choose-avatar {
  width: 100rpx !important;
  height: 100rpx !important;
  padding: 0;
  margin: 0;
  border: 1px solid #ddd;
  box-sizing: border-box;
  background: transparent;
  border-radius: 50%;
  position: relative;
}
.popup-content .avatar-wrapper .choose-avatar .avatar-img {
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: block;
}
.popup-content .avatar-wrapper .iconfont {
  position: absolute;
  left: 90%;
}
.popup-content .btns {
  flex: 1;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
}
.popup-content .btns .item-btn {
  padding: 20rpx 120rpx;
  border: 1px solid #ddd;
}
.popup-content .btns .submit {
  color: #fff;
  background-color: #1A4190;
}