 .nav-bar {
  background-color: #f8f8f8 !important;
}
.profile-card {
  width: 95%;
  height: -webkit-max-content;
  height: max-content;
  align-items: center;
  position: relative;
}
.profile-card .avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 2px solid #ddd;
}
.profile-card .nickname {
  margin-left: 20rpx;
  font-size: 30rpx;
}
.profile-card .edit {
  position: absolute;
  right: 40rpx;
  font-size: 30rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  color: #215088;
  border: 1px solid #215088;
}
.popup-content {
  padding: 0 40rpx;
  height: 100%;
}
.popup-content .header {
  height: 120rpx;
  justify-content: space-around;
}
.popup-content .header .title {
  font-size: 35rpx;
  font-weight: bold;
}
.popup-content .header .desc {
  font-size: 25rpx;
}
.popup-content .line-item {
  width: 100%;
  height: 120rpx;
  padding: 20rpx 0;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #ddd;
}
.popup-content .item-text {
  margin-right: 40rpx;
  font-size: 30rpx;
}
.popup-content .avatar-wrapper .choose-avatar {
  width: 100rpx !important;
  height: 100rpx !important;
  padding: 0;
  margin: 0;
  border: 1px solid #ddd;
  box-sizing: border-box;
  background: transparent;
  border-radius: 50%;
  position: relative;
}
.popup-content .avatar-wrapper .choose-avatar .avatar-img {
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: block;
}
.popup-content .avatar-wrapper .iconfont {
  position: absolute;
  left: 90%;
}
.popup-content .btns {
  flex: 1;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
}
.popup-content .btns .item-btn {
  padding: 20rpx 120rpx;
  border: 1px solid #ddd;
}
.popup-content .btns .submit {
  color: #fff;
  background-color: #1A4190;
}